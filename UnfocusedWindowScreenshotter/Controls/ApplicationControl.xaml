<UserControl x:Class="UnfocusedWindowScreenshotter.Controls.ApplicationControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UnfocusedWindowScreenshotter.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="70" d:DesignWidth="200">
    <Grid>
        <Grid VerticalAlignment="Center" HorizontalAlignment="Stretch">
            <Label Content="Title:" HorizontalAlignment="Left"/>
            <Label x:Name="ApplicationTitle" HorizontalAlignment="Stretch" Margin="40,0,0,0"/>
        </Grid>
    </Grid>
</UserControl>
